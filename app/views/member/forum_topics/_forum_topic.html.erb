<% div_for forum_topic do %>
  <div>
    <%= link_to forum_topic.title, member_forum_topic_path(forum_topic) %>
  </div>
  <div>
    created by <%= link_to forum_topic.user.profile.full_name, profile_path(forum_topic.user.profile) %>
  </div>
  <div>
    <%= forum_topic.forum_posts.count %> posts
  </div>
  <% if forum_topic.user == current_user %>
    <div>
      <% if forum_topic.user == current_user %>
        <%= link_to_remote "edit", :url => "/member/forum_topics/edit/#{forum_topic.id}" %>
        <%= link_to_remote "delete", :url => member_forum_topic_path(forum_topic), :method => :delete, :confirm => "Are You Sure" %>
      <% end %>
    </div>
  <% end %>
  <hr />
<% end %>
